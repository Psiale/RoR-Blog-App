<%= form_for(@article, html: {multipart: true}) {  |f| %>

  <ul>
  <% @article.errors.full_messages.each{ |e|  %>
  <li><%= e %></li>
  <% } %>
  </ul>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
  <%= f.label :tag_list  %>
  <%= f.text_field :tag_list %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>
  <p>
  <%= f.label :image, "Attach an Image" %><br />
  <%= f.file_field :image %>
</p>
  <p>
    <%= f.submit %>
  </p>
<% } %>